:root {
    --bg: #0d0d0f;
    --card: #1a1a1e;
    --accent: #ff2e63;
    --accent-glow: rgba(255, 46, 99, 0.4);
    --text: #ffffff;
    --text-dim: #a0a0a5;
}

body {
    margin: 0; font-family: 'Oswald', sans-serif;
    background: var(--bg); color: var(--text);
    overflow-x: hidden;
}

.hidden { display: none !important; }

/* --- CAROUSEL & BANNER --- */
.carousel-container {
    position: relative; width: 100%; height: 500px;
    background: #000; overflow: hidden;
}
.carousel-track {
    display: flex; width: 100%; height: 100%;
    transition: transform 0.8s cubic-bezier(0.65, 0, 0.35, 1);
}
.carousel-slide { min-width: 100%; height: 100%; position: relative; }
.carousel-slide canvas {
    width: 100% !important; height: 100% !important;
    object-fit: cover !important; 
    filter: brightness(0.35) contrast(1.1);
}
.carousel-overlay {
    position: absolute; inset: 0;
    background: linear-gradient(to top, var(--bg) 10%, transparent 70%);
    display: flex; align-items: flex-end; padding: 0 60px 40px 60px;
    box-sizing: border-box; z-index: 10;
    pointer-events: none;
}
.carousel-content { pointer-events: auto; width: 100%; max-width: 800px; }
.anime-title {
    font-size: clamp(3rem, 8vw, 5rem); font-weight: 900; font-style: italic;
    line-height: 0.9; margin: 0; letter-spacing: -2px;
    background: linear-gradient(to right, #fff, var(--accent));
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
}
.anime-subtitle { color: var(--text-dim); margin: 10px 0 25px; letter-spacing: 2px; font-weight: bold; }

/* --- GRID DAFTAR KOMIK (Horizontal Scroll) --- */
.dashboard-header { padding: 30px 60px; display: flex; justify-content: space-between; }
.volume-grid { display: flex; flex-direction: column; gap: 40px; padding: 20px 0; }
.row-title {
    font-size: 1.2rem; color: var(--accent); text-transform: uppercase;
    border-left: 4px solid var(--accent); padding-left: 15px; margin-left: 60px;
}
.volume-row-list {
    display: flex; overflow-x: auto; gap: 20px; padding: 0 60px 20px 60px;
    scrollbar-width: none;
}
.volume-row-list::-webkit-scrollbar { display: none; }

.vol-card {
    min-width: 200px; flex: 0 0 auto;
    background: var(--card); border-radius: 8px; overflow: hidden;
    transition: 0.4s; border: 1px solid #222; cursor: pointer;
}
.vol-card:hover { transform: translateY(-8px); border-color: var(--accent); }
.vol-thumbnail { width: 100%; height: 280px; object-fit: cover; }
.vol-info { padding: 15px; }
.prog-bar { background: #000; height: 4px; border-radius: 10px; margin-top: 10px; }
.prog-fill { background: var(--accent); height: 100%; transition: 0.5s; }

/* --- READER VIEW (ORIGINAL & STABIL) --- */
#reader {
    position: fixed; inset: 0; background: #050505; z-index: 2000;
    display: flex; flex-direction: column;
}
.reader-nav {
    display: flex; align-items: center; gap: 20px; padding: 15px 25px;
    background: rgba(15,15,15,0.95); border-bottom: 1px solid #222;
}
#viewer-container {
    flex: 1; overflow-y: auto; display: flex; justify-content: center;
    padding: 10px; background: #000;
}
#pdf-render-area canvas {
    max-width: 100% !important; height: auto !important;
    filter: none !important; box-shadow: 0 0 40px rgba(0,0,0,0.5);
    display: block;
}
.reader-footer {
    padding: 20px; background: rgba(15,15,15,0.95);
    display: flex; justify-content: space-between; align-items: center;
    border-top: 1px solid #222;
}

/* --- BUTTONS --- */
button { cursor: pointer; border: none; font-weight: bold; font-family: inherit; transition: 0.3s; }
.btn-main, .reader-footer button, .reader-nav button {
    background: var(--accent); color: #fff; padding: 10px 20px; border-radius: 4px;
}
.btn-reset { background: transparent; color: var(--text-dim); border: 1px solid #333; padding: 5px 15px; }
.btn-main { clip-path: polygon(10% 0, 100% 0, 90% 100%, 0% 100%); padding: 15px 40px; }

@media (max-width: 600px) {
    .carousel-overlay { padding: 0 25px 30px 25px; }
    .row-title { margin-left: 25px; }
    .volume-row-list { padding: 0 25px 20px 25px; }
}
