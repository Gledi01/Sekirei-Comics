const pdfjsLib = window['pdfjs-dist/build/pdf'];
pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

let currentPdf = null;
let currentPage = 1;
let currentVolId = "";
let renderTask = null;
let carouselIndex = 0;

// --- KONFIGURASI CAROUSEL ---
const TOTAL_BANNER_PAGES = 110; 
let carouselPdfInstance = null;

// 1. Generate Volumes (Dashboard Grid)
const volumes = [];
for (let i = 1; i <= 18; i++) {
    if (i === 3) {
        for (let ch = 1; ch <= 11; ch++) {
            volumes.push({ id: `vol3-${ch}`, title: `Sekirei Vol 3 Ch ${ch}` });
        }
    } else {
        volumes.push({ id: `vol${i}`, title: `Sekirei Volume ${i}` });
    }
}

// 2. Initialize App
async function initApp() {
    renderDashboard();
    await initCarousel();
    
    // Auto slide carousel setiap 4 detik
    setInterval(() => {
        carouselIndex = (carouselIndex + 1) % TOTAL_BANNER_PAGES;
        updateCarouselUI();
    }, 4000);
}

// 3. Carousel Logic (Lazy Loading 110 Halaman)
async function initCarousel() {
    const track = document.getElementById('carousel-track');
    const dots = document.getElementById('carousel-dots');
    
    try {
        // Load satu file carousel.pdf untuk semua slide
        const loadingTask = pdfjsLib.getDocument('php/get_pdf.php?vol=carousel');
        carouselPdfInstance = await loadingTask.promise;

        // Buat struktur slide kosong sebanyak 110
        for (let i = 1; i <= TOTAL_BANNER_PAGES; i++) {
            const slide = document.createElement('div');
            slide.className = 'carousel-slide';
            slide.id = `banner-slide-${i}`;
            track.appendChild(slide);

            // Buat Dots (Dibatasi 10 dot pertama agar UI tidak hancur)
            if (i <= 10) {
                const dot = document.createElement('div');
                dot.className = `dot ${i === 1 ? 'active' : ''}`;
                dots.appendChild(dot);
            }
        }

        // Render halaman pertama & kedua sebagai persiapan awal
        renderCarouselPage(1);
        renderCarouselPage(2);

    } catch (e) { 
        console.error("Gagal memuat carousel.pdf:", e); 
    }
}

// Fungsi Render khusus Carousel (Lazy Load)
async function renderCarouselPage(pageNum) {
    if (pageNum < 1 || pageNum > TOTAL_BANNER_PAGES || !carouselPdfInstance) return;

    const slide = document.getElementById(`banner-slide-${pageNum}`);
    // Jika sudah ada canvas, jangan render ulang
    if (slide.querySelector('canvas')) return;

    try {
        const page = await carouselPdfInstance.getPage(pageNum);
        const viewport = page.getViewport({ scale: 1.2 });
        const canvas = document.createElement('canvas');
        const context = canvas.getContext('2d');
        
        canvas.height = viewport.height;
        canvas.width = viewport.width;
        slide.appendChild(canvas);

        await page.render({ canvasContext: context, viewport: viewport }).promise;
    } catch (e) {
        console.warn(`Gagal render banner hal: ${pageNum}`);
    }
}

function updateCarouselUI() {
    const track = document.getElementById('carousel-track');
    const dots = document.querySelectorAll('.dot');
    
    // Geser Carousel
    track.style.transform = `translateX(-${carouselIndex * 100}%)`;
    
    // Update Dots (hanya jika ada)
    dots.forEach((d, i) => d.classList.toggle('active', i === carouselIndex));

    // LOGIKA LAZY LOAD: 
    // Render halaman sekarang, halaman berikutnya (+1), dan halaman sebelumnya (-1)
    const currentActivePage = carouselIndex + 1;
    renderCarouselPage(currentActivePage);
    renderCarouselPage(currentActivePage + 1);
    renderCarouselPage(currentActivePage - 1);
}

// 4. Dashboard Grid & Reader Logic
function renderDashboard() {
    const list = document.getElementById('volume-list');
    if(!list) return;
    list.innerHTML = '';
    volumes.forEach(vol => {
        const prog = localStorage.getItem(`prog_${vol.id}`) || 0;
        list.innerHTML += `
            <div class="vol-card" onclick="openReader('${vol.id}', '${vol.title}')">
                <div class="vol-info">
                    <strong>${vol.title}</strong>
                    <div class="prog-bar"><div class="prog-fill" style="width:${prog}%"></div></div>
                    <small style="color:var(--text-dim)">${prog}% Complete</small>
                </div>
            </div>`;
    });
    calculateGlobal();
}

async function openReader(id, title) {
    currentVolId = id;
    document.getElementById('reader-title').innerText = title;
    document.getElementById('dashboard').classList.add('hidden');
    document.getElementById('reader').classList.remove('hidden');

    try {
        const loadingTask = pdfjsLib.getDocument(`php/get_pdf.php?vol=${id}`);
        currentPdf = await loadingTask.promise;
        const lastPage = localStorage.getItem(`last_page_${id}`);
        currentPage = lastPage ? parseInt(lastPage) : 1;
        renderPage(currentPage);
    } catch (e) {
        alert("Gagal memuat PDF.");
        closeReader();
    }
}

async function renderPage(num) {
    if (renderTask) renderTask.cancel();
    const page = await currentPdf.getPage(num);
    const viewport = page.getViewport({ scale: window.innerWidth < 768 ? 0.9 : 1.5 });
    
    const container = document.getElementById('pdf-render-area');
    container.innerHTML = '';
    const canvas = document.createElement('canvas');
    const context = canvas.getContext('2d', { alpha: false });
    canvas.height = viewport.height;
    canvas.width = viewport.width;
    container.appendChild(canvas);

    renderTask = page.render({ canvasContext: context, viewport: viewport });
    
    document.getElementById('page-info').innerText = `${num} / ${currentPdf.numPages}`;
    const slider = document.getElementById('page-slider');
    slider.max = currentPdf.numPages;
    slider.value = num;
    
    saveProgress(num);
}

function nextPage() { if (currentPage < currentPdf.numPages) { currentPage++; renderPage(currentPage); } }
function prevPage() { if (currentPage > 1) { currentPage--; renderPage(currentPage); } }
function goToPage(num) { currentPage = parseInt(num); renderPage(currentPage); }

function saveProgress(num) {
    const p = Math.round((num / currentPdf.numPages) * 100);
    localStorage.setItem(`prog_${currentVolId}`, p);
    localStorage.setItem(`last_page_${currentVolId}`, num);
}

function closeReader() {
    document.getElementById('dashboard').classList.remove('hidden');
    document.getElementById('reader').classList.add('hidden');
    renderDashboard();
}

function resetAllProgress() {
    if(confirm("Hapus semua progress?")) { localStorage.clear(); renderDashboard(); }
}

function calculateGlobal() {
    let t = 0;
    volumes.forEach(v => t += parseInt(localStorage.getItem(`prog_${v.id}`)) || 0);
    const stat = document.getElementById('total-stat');
    if(stat) stat.innerText = `Total Progress: ${Math.round(t/volumes.length)}%`;
}

function startReadingLatest() {
    openReader(volumes[0].id, volumes[0].title);
}

// Init App
initApp();